{
    // -------------------------------------------------------------------------
    // Global configuration
    // -------------------------------------------------------------------------

    "layer": "top",
    "position": "top",

    "modules-left": [
        "sway/workspaces"
    ],
    "modules-center": [
        "clock#time",
        "clock#date",
    ],
    "modules-right": [
        "tray",
        "network",
//        "custom-chromium",
        "pulseaudio",
        "backlight",
        "sway/language",
        "memory",
        "disk",
        "battery"
//        "custom-power"
    ],


    // -------------------------------------------------------------------------
    // Modules
    // -------------------------------------------------------------------------

    "battery": {
        "interval": 30,
        "states": {
            "warning": 60,
            "critical": 45
        },
        "format": "ïƒ§  {icon}  {capacity}%", // Icon: bolt
        "format-discharging": "{icon}  {capacity}%",
        "format-icons": [
            "ï‰„", // Icon: battery-full
            "ï‰ƒ", // Icon: battery-three-quarters
            "ï‰‚", // Icon: battery-half
            "ï‰", // Icon: battery-quarter
            "ï‰€"  // Icon: battery-empty
        ],
        "tooltip": false
    },

    "clock#time": {
        "interval": 1,
        "format": "{:%H:%M:%S}",
        "tooltip": false
    },

    "clock#date": {
      "interval": 120,
      "format": "ï³  {:%e %b %Y}", // Icon: calendar-alt
      "tooltip-format": "{:%e %B %Y}",
      "tooltip": false,
      "on-click": "gsimplecal"
    },

    "cpu": {
        "interval": 5,
        "format": "ï‹›  {usage}% ({load})", // Icon: microchip
        "states": {
          "warning": 70,
          "critical": 90
        }
    },

    "sway/language": {
      "format": "ï„œ  {}",
      "on-click": "~/.config/waybar/scripts/kblayout.sh",
      "tooltip": false
    },

    "memory": {
        "interval": 30,
        "format": "{used:0.1f}G / {total:0.1f}G ïƒ‰",
        "states": {
            "warning": 70,
            "critical": 90
        }
    },

    "network": {
        "interval": 30,
        "format-wifi": " {essid} ({signalStrength}%)",
        "format-ethernet": "ïž–  {ifname}: {ipaddr}/{cidr}", // Icon: ethernet
        "format-disconnected": "âš   Disconnected",
        "tooltip-format": "{ifname}: {ipaddr}"
    },

    "sway/workspaces": {
        "all-outputs": false,
        "disable-scroll": true,
        "format": "{icon} {name}",
        "format-icons": {
            "1": "ï„ ",
            "2": "ï‰¨",
            "3": "ï„¡",
            "4": "ï…¼",
		        "5": "ï€­",
            "6": "ï€½",
            "urgent": "ïª",
            "focused": "ï†’",
            "default": "ï„‘",
        }
    },

    "pulseaudio": {
        "scroll-step": 1,
        "format": "{icon}  {volume}%",
          "format-muted": "ï€¦",
          "format-icons": {
          "headphones": "ï€¥",
          "default": ["ï€§", "ï€¨"]
        },
        "on-click": "pactl set-sink-mute @DEFAULT_SINK@ toggle"
    },

    "backlight": {
        "device": "intel_backlight",
        "format": "{percent}% {icon}",
        "format-icons": ["ï„‘", "ï†…"],
        "on-scroll-up" : "light -A 1",
        "on-scroll-down" : "light -U 1",
    },

    "temperature": {
      "critical-threshold": 80,
      "interval": 5,
      "format": "{icon}  {temperatureC}Â°C",
      "format-icons": [
          "ï‹‹", // Icon: temperature-empty
          "ï‹Š", // Icon: temperature-quarter
          "ï‹‰", // Icon: temperature-half
          "ï‹ˆ", // Icon: temperature-three-quarters
          "ï‹ˆ"  // Icon: temperature-full
      ],
      "tooltip": true
    },

    "tray": {
        "icon-size": 24
    },

    "wlr/taskbar": {
      "format": "{icon}",
      "icon-size": 24,
      "icon-theme": "Numix-Circle",
      "markup": true,
      "tooltip-format": "{title}",
      "on-click": "activate",
      "on-click-middle": "close",
      }
    },

