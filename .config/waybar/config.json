{
  // -------------------------------------------------------------------------
  // Global configuration
  // -------------------------------------------------------------------------
  "layer": "top",
  "position": "top",
  "modules-left": [
    "sway/workspaces"
  ],
  "modules-center": [
    "clock#time",
    "clock#date",
  ],
  "modules-right": [
    "tray",
    "network",
    "custom-chromium",
    "pulseaudio",
    //    "mpd",
    "backlight",
    "sway/language",
    "memory",
    "disk",
    "upower"
  ],
  // -------------------------------------------------------------------------
  // Modules
  // -------------------------------------------------------------------------
  "mpd": {
    "format": "{stateIcon} {consumeIcon}{randomIcon}{repeatIcon}{singleIcon}{artist} - {album} - {title} ({elapsedTime:%M:%S}/{totalTime:%M:%S}) ï€",
    "format-disconnected": "Disconnected ï€",
    "format-stopped": "{consumeIcon}{randomIcon}{repeatIcon}{singleIcon}Stopped ï€",
    "interval": 10,
    "consume-icons": {
      "on": "ïƒ„ " // Icon shows only when "consume" is on
    },
    "random-icons": {
      "off": "<span color=\"#f53c3c\">ï´</span> ", // Icon grayed out when "random" is off
      "on": "ï´ "
    },
    "repeat-icons": {
      "on": "ï€ "
    },
    "single-icons": {
      "on": "ï€1 "
    },
    "state-icons": {
      "paused": "ïŒ",
      "playing": "ï‹"
    },
    "tooltip-format": "MPD (connected)",
    "tooltip-format-disconnected": "MPD (disconnected)"
  },
  "upower": {
    "icon-size": 20,
    "hide-if-empty": true,
    "tooltip": true,
    "tooltip-spacing": 20
  },
  "clock#time": {
    "interval": 1,
    "format": "{:%H:%M:%S}",
    "tooltip": false
  },
  "clock#date": {
    "interval": 120,
    "format": "ï³  {:%e %b %Y}", // Icon: calendar-alt
    "tooltip-format": "{:%e %B %Y}",
    "tooltip": false,
    "on-click": "gsimplecal"
  },
  "cpu": {
    "interval": 5,
    "format": "ï‹›  {usage}% ({load})", // Icon: microchip
    "states": {
      "warning": 70,
      "critical": 90
    }
  },
  "sway/language": {
    "format": "ï„œ  {}",
    "on-click": "~/.config/waybar/scripts/kblayout.sh",
    "tooltip": false
  },
  "memory": {
    "interval": 30,
    "format": "ïƒ‰ {used:0.1f}G / {total:0.1f}G",
    "states": {
      "warning": 70,
      "critical": 90
    },
    "tooltip": false,
  },
  "network": {
    "interval": 30,
    "format-wifi": "{essid} ({signalStrength}%)",
    "format-ethernet": "ï–  {ifname}: {ipaddr}/{cidr}", // Icon: ethernet
    "format-disconnected": "âš   Disconnected",
    "tooltip-format": "{ifname}: {ipaddr}"
  },
  "sway/workspaces": {
    "all-outputs": false,
    "disable-scroll": true,
    "format": "{icon} {name}",
    "format-icons": {
      "1": "ï„ ",
      "2": "ï‰¨",
      "3": "ï„¡",
      "4": "ï…¼",
      "5": "ï€­",
      "6": "ï€½",
      "urgent": "ïª",
      "focused": "ï†’",
      "default": "ï„‘",
    }
  },
  "pulseaudio": {
    "scroll-step": 1,
    "format": "{icon}  {volume}%",
    "format-muted": "ï€¦",
    "format-icons": {
      "headphones": "ï€¥",
      "default": [
        "ï€§",
        "ï€¨"
      ]
    },
    "on-click": "pactl set-sink-mute @DEFAULT_SINK@ toggle"
  },
  "backlight": {
    "device": "intel_backlight",
    "format": "{icon} {percent}% ",
    "format-icons": [
      "ï„‘",
      "ï†…"
    ],
    "on-scroll-up": "light -A 1",
    "on-scroll-down": "bash ~/.config/waybar/scripts/backlightDown.sh",
    "on-click": "light -S 1",
    "on-click-right": "light -S 100"
  },
  "temperature": {
    "critical-threshold": 80,
    "interval": 5,
    "format": "{icon}  {temperatureC}Â°C",
    "format-icons": [
      "ï‹‹", // Icon: temperature-empty
      "ï‹Š", // Icon: temperature-quarter
      "ï‹‰", // Icon: temperature-half
      "ï‹ˆ", // Icon: temperature-three-quarters
      "ï‹ˆ" // Icon: temperature-full
    ],
    "tooltip": true
  },
  "tray": {
    "icon-size": 24,
    "tooltip": false
  },
  "disk": {
    "interval": 30,
    "format": "ğŸ–« {used}/{total}",
    "path": "/home/"
  }
}
