// https://github.com/Alexays/Waybar/wiki/Configuration
{
    // -------------------------------------------------------------------------
    // Global configuration
    // -------------------------------------------------------------------------

    "layer": "top",
    "position": "top",

    // If height property would be not present, it'd be calculated dynamically
    "height": 30,

    "modules-left": [
        "sway/workspaces",
        "sway/mode"
    ],
    "modules-center": [
        "sway/window"
    ],
    "modules-right": [
        "tray",
        "network",
        "pulseaudio",
        "memory",
        "cpu",
        "temperature",
        "sway/language",
        "battery",
        "clock#date",
        "clock#time"
    ],


    // -------------------------------------------------------------------------
    // Modules
    // -------------------------------------------------------------------------

    "battery": {
        "interval": 10,
        "states": {
            "warning": 30,
            "critical": 15
        },
        // Connected to AC
        "format": "ÔÉß  {icon}  {capacity}%", // Icon: bolt
        // Not connected to AC
        "format-discharging": "{icon}  {capacity}%",
        "format-icons": [
            "ÔâÑ", // Icon: battery-full
            "ÔâÉ", // Icon: battery-three-quarters
            "ÔâÇ", // Icon: battery-half
            "ÔâÅ", // Icon: battery-quarter
            "ÔâÄ"  // Icon: battery-empty
        ],
        "tooltip": true
    },

    "clock#time": {
        "interval": 1,
        "format": "{:%H:%M:%S}",
        "tooltip": false
    },

    "clock#date": {
      "interval": 10,
      "format": "ÔÅ≥  {:%e %b %Y}", // Icon: calendar-alt
      "tooltip-format": "{:%e %B %Y}"
    },

    "cpu": {
        "interval": 5,
        "format": "Ôãõ  {usage}% ({load})", // Icon: microchip
        "states": {
          "warning": 70,
          "critical": 90
        }
    },

  "sway/language": {
    "format": "ÔÑú  {}",
    "on-click": "swaymsg input type:keyboard xkb_switch_layout next",
},

    "memory": {
        "interval": 30,
        "format": "{used:0.1f}G / {total:0.1f}G ÔÉâ",
        "states": {
            "warning": 70,
            "critical": 90
        }
    },

    "network": {
        "interval": 30,
        "format-wifi": " {essid} ({signalStrength}%)",
        "format-ethernet": "Ôûñ  {ifname}: {ipaddr}/{cidr}", // Icon: ethernet
        "format-disconnected": "‚ö†  Disconnected",
        "tooltip-format": "{ifname}: {ipaddr}"
    },

    "sway/mode": {
        "format": "<span style=\"italic\">Ôåû  {}</span>", // Icon: expand-arrows-alt
        "tooltip": false
    },

    "sway/window": {
        "format": "{}",
        "max-length": 100,
        "rewrite": {
          "(.*) - Brave": "üåé Brave",
        }
    },

    "sway/workspaces": {
        "all-outputs": false,
        "disable-scroll": true,
        "format": "{icon} {name}",
        "format-icons": {
            "1:www": "Ô§á", // Icon: firefox-browser
            "2:mail": "Ôä∂", // Icon: mail
            "3:editor": "ÔÑ°", // Icon: code
            "4:terminals": "ÔÑ†", // Icon: terminal
            "5:portal": "ÔÑ†", // Icon: terminal
            "urgent": "ÔÅ™",
            "focused": "ÔÜí",
            "default": "ÔÑë"
        }
    },

    "pulseaudio": {
        //"scroll-step": 1,
        "format": "{icon}  {volume}%",
          "format-muted": "ÔÄ¶",
          "format-icons": {
          "headphones": "ÔÄ•",
          "default": ["ÔÄß", "ÔÄ®"]
        },
        "on-click": "source ~/.config/waybar/mute.sh"
    },

    "temperature": {
      "critical-threshold": 80,
      "interval": 5,
      "format": "{icon}  {temperatureC}¬∞C",
      "format-icons": [
          "Ôãã", // Icon: temperature-empty
          "Ôãä", // Icon: temperature-quarter
          "Ôãâ", // Icon: temperature-half
          "Ôãà", // Icon: temperature-three-quarters
          "Ôãà"  // Icon: temperature-full
      ],
      "tooltip": true
    },

    "tray": {
        "icon-size": 21,
        "spacing": 5
    }

}
